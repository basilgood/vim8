{
  "coc.preferences.enableMessageDialog": true,
  "coc.preferences.useQuickfixForLocations": true,
  "dialog.floatBorderHighlight": "FloatBorder",
  "floatFactory.floatConfig": {
    "rounded": true,
    "border": true,
    "borderhighlight": "FloatBorder",
    "maxWidth": 50
  },
  "suggest.noselect": true,
  "suggest.enablePreselect": false,
  "suggest.insertMode": "replace",
  "suggest.timeout": 10000,
  "diagnostic.errorSign": "",
  "diagnostic.warningSign": "",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": "",
  "diagnostic.checkCurrentLine": true,
  "diagnostic.enableMessage": "never",
  "diagnostic.virtualText": true,
  "diagnostic.format": "%message [%source]",
  "diagnostic.separateRelatedInformationAsDiagnostics": true,
  "signature.target": "echo",
  "git.conflict.enabled": false,
  "snippets.ultisnips.enable": false,
  "html.filetypes": [
    "html",
    "htmldjango",
    "astro",
    "jinja",
    "javascript"
  ],
  "html-css-support.enabledLanguages": [
    "html",
    "htmldjango",
    "astro",
    "jinja",
    "javascript"
  ],
  "htmldjango.djlint.indent": 2,
  "htmldjango.djhtml.tabWidth": 2,
  "htmldjango.djlint.formatJs": true,
  "htmldjango.djlint.formatCss": true,
  "htmldjango.djlint.preserveBlankLines": true,
  "rust-analyzer.checkOnSave": true,
  "rust-analyzer.lens.enable": true,
  "rust-analyzer.updates.prompt": true,
  "rust-analyzer.signatureInfo.detail": "parameters",
  "markdownlint.config": {
    "line-length": false
  },
  "languageserver": {
    "nix": {
      "command": "nil",
      "filetypes": [
        "nix"
      ]
    }
  },
  "diagnostic-languageserver.mergeConfig": true,
  "diagnostic-languageserver.filetypes": {
    "yaml": "yamllint",
    "sh": "sh"
  },
  "diagnostic-languageserver.formatters": {
    "yamlfix": {
      "command": "yamlfix",
      "args": [
        "-"
      ]
    },
    "alejandra": {
      "command": "alejandra"
    },
    "shfmt": {
      "command": "shfmt",
      "args": [
        "-i",
        2,
        "-ci",
        "-sr"
      ]
    },
    "prettier": {
      "command": "prettier"
    }
  },
  "diagnostic-languageserver.formatFiletypes": {
    "yaml": "yamlfix",
    "nix": "alejandra",
    "javascript": "prettier",
    "astro": "prettier",
    "sh": "shfmt"
  }
}
