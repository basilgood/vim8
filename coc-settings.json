{

  "suggest.autoTrigger": "always",
  "suggest.triggerAfterInsertEnter": true,
  "suggest.timeout": 5000,
  "suggest.triggerCompletionWait": 300,
  "suggest.minTriggerInputLength": 2,
  "suggest.noselect": true,
  "suggest.enablePreview": true,
  "suggest.preferCompleteThanJumpPlaceholder": true,
  "suggest.detailField":"abbr",
  "suggest.acceptSuggestionOnCommitCharacter": true,
  "suggest.keepCompleteopt": true,

  "coc.preferences.colorSupport": false,
  "coc.preferences.hoverTarget": "float",
  "coc.preferences.enableFloatHighlight": true,
  "coc.preferences.formatOnType": false,

  "tsserver.enableJavascript": true,
  "typescript.preferences.quoteStyle": "single",
  "typescript.referencesCodeLens.enable": false,
  "tsserver.formatOnType": false,
  "tsserver.typingsCacheLocation": "~/.cache/tsserver",
  "tsserver.log": "normal",

  // eslint
  "eslint.filetypes": ["javascript", "typescript", "javascriptreact", "typescriptreact", "html"],
  "eslint.run": "onSave",
  "eslint.autoFixOnSave": true,
  "eslint.options": {"configFile": "./.eslintrc.json"},

  // yaml
  "yaml.format.enable": true,
  "yaml.format.singleQuote": true,
  "yaml.format.bracketSpacing": true,
  "yaml.hover": true,
  "yaml.completion": true,

  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "filetypes": ["sh"],
      "args": ["start"]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"],
      "initializationOptions": {},
      "settings": {}
    },
  },

  // diagnostic
  "codeLens.enable": true,
  "diagnostic.signOffset": 9999999,
  "diagnostic.displayByAle": false,
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.errorSign": "_e",
  "diagnostic.warningSign": "_w",
  "diagnostic.infoSign": "_i",
  "diagnostic.hintSign": "_h",

  // git
  "git.enableGutters": true,
  "git.branchCharacter":"\uf408",

  // emmet
  "emmet.includeLanguages": {"vue-html": "html", "javascript": "javascriptreact", "twig": "html"}

}

// vim: ft=jsonc
