{
  "diagnostic.errorSign": "E",
  "diagnostic.warningSign": "W",
  "diagnostic.infoSign": "I",
  "diagnostic.hintSign": "H",
  "diagnostic.floatConfig": {
    "border": true,
    "rounded": true,
    "borderhighlight": "Comment",
    "highlight": "Comment"
  },

  "suggest.floatConfig": {
    "border": true,
    "rounded": true,
    "borderhighlight": "Comment",
    "highlight": "black"
  },

  "hover.floatConfig": {
    "border": true,
    "rounded": true,
    "borderhighlight": "Comment",
    "highlight": "black"
  },

  "snippets.ultisnips.enable": false,
  "snippets.userSnippetsDirectory": "",

  "git.addGBlameToBufferVar": true,
  "git.conflict.enabled": false,
  "git.semanticCommit.filetypes": ["gitcommit"],

  "html.filetypes": ["html", "javascript"],

  "html-css-support.enabledLanguages": ["html", "javascript"],

  "coverage.jsonReportPath": "./.tmp/coverage/coverage-final.json",
  "coverage.uncoveredSign.text": "â˜‚ ",
  "coverage.uncoveredSign.hlGroup": "CocGitRemovedSign",

  "languageserver": {
    "nix": {
      "command": "rnix-lsp",
      "filetypes": ["nix"]
    }
  },

  "diagnostic-languageserver.mergeConfig": true,
  "diagnostic-languageserver.filetypes": {
    "lua": "luacheck",
    "yaml": "yamllint"
  },
  "diagnostic-languageserver.formatters": {
    "stylua": {
      "command": "stylua",
      "args": ["-"]
    },
    "prettier": {
      "command": "prettier"
    }
  },
  "diagnostic-languageserver.formatFiletypes": {
    "javascript": "prettier",
    "lua": "stylua"
  }
}
